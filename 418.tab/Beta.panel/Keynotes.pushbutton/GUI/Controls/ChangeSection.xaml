<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ControlTemplate x:Key="ChangeSectionTemplate" TargetType="ContentControl">
    <GroupBox Header="{DynamicResource ChangeKeynote}" Margin="0,0,0,10" Padding="6">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="{DynamicResource RefreshKeynotesWidth}"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="26"/>
        </Grid.ColumnDefinitions>

        <Button Content="{DynamicResource RefreshKeynotes}"
                Grid.Column="0"
                Padding="8,4,8,4"
                ToolTip="{DynamicResource RefreshKeynotesInfo}"
                Click="refresh"/>

        <Button Content="&#x25CF;&#x25CF;&#x25CF;"
                Grid.Column="1"
                Margin="5,0,5,0"
                Padding="0,4,0,4"
                FontFamily="Segoe UI Symbol"
                ToolTip="{DynamicResource ChangeKeynote}"
                Click="change_keynote_file"/>

        <Button Content="{DynamicResource showKFileIcon}"
                Grid.Column="2"
                ToolTip="{DynamicResource ShowKeynote}"
                Click="show_keynote_file"/>
      </Grid>
    </GroupBox>
  </ControlTemplate>

</ResourceDictionary>
