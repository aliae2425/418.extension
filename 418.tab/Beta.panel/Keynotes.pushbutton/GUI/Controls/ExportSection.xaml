<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ControlTemplate x:Key="ExportSectionTemplate" TargetType="ContentControl">
    <GroupBox Header="Export All" Margin="0,0,0,10" Padding="6">
      <StackPanel>
        <Button Content="Import Keynotes"
                Margin="0,0,0,6"
                Padding="8,4,8,4"
                ToolTip="Import keynotes from Revit standard keynote file"
          />

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <Button Content="Export All"
                  BorderThickness="1,1,0,1"
                  Grid.Column="0"
                  Padding="8,4,8,4"
                  ToolTip="Export keynotes to Revit standard keynote file"
              />

          <Button Content="or Visible"
                  BorderThickness="0,1,1,1"
                  Grid.Column="1"
                  Padding="8,4,8,4"
                  ToolTip="Export lted keynotes to Revit standard keynote file"
              />
        </Grid>
      </StackPanel>
    </GroupBox>
  </ControlTemplate>

</ResourceDictionary>
