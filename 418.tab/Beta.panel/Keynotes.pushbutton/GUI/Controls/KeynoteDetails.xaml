<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="KeynoteDetailsTemplate" TargetType="ContentControl">
        <Border Style="{DynamicResource CardStyle}" Margin="6,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Details" Style="{DynamicResource SubHeaderTextBlockStyle}" Margin="0,0,0,8"/>
                <ListView Name="MainListView" Grid.Row="1" BorderThickness="0" Background="Transparent"/>
            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>
