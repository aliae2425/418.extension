<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ControlTemplate x:Key="KeynotesSectionTemplate" TargetType="ContentControl">
    <GroupBox Header="Keynotes" Margin="0,0,0,10" Padding="6">
      <StackPanel IsEnabled="True">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="78"/>
            <RowDefinition Height="39"/>
          </Grid.RowDefinitions>

          <Button x:Name="keynoteAdd" Grid.Column="0" Grid.Row="0"
                  Margin="0,0,2,2"
                  Content="{DynamicResource addKeynoteIcon}"
                  ToolTip="Add a new keynote"
              />

            <Button x:Name="keynoteSearch" Grid.Column="0" Grid.Row="1"
                  Margin="0,2,2,0" IsEnabled="False"
                  Content="{DynamicResource findKeynoteIcon}"
                  ToolTip="Find instances of selected keynote"
                />

          <Grid x:Name="keynoteEditButtons" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                Height="117"
                IsEnabled="False">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition/>
              <RowDefinition/>
              <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0"
                    Margin="2,0,2,2"
                    Content="{DynamicResource editKeynoteIcon}"
                    ToolTip="Edit selected keynote"
                  />

            <Button Grid.Column="1" Grid.Row="0"
                    Margin="2,0,0,2"
                    Content="{DynamicResource removeKeynoteIcon}"
                    ToolTip="Remove selected keynote"
                  />

            <Button x:Name="subkeynoteAdd" Grid.Column="0" Grid.Row="1"
                    Margin="2,2,2,2"
                    Content="{DynamicResource addSubKeynoteIcon}"
                    ToolTip="Add a new keynote as a child to the selected keynote"
                  />

            <Button Grid.Column="1" Grid.Row="1"
                    Margin="2,2,0,2"
                    Content="{DynamicResource duplicateKeynoteIcon}"
                    ToolTip="Duplicate selected keynote"
                  />

            <Button Grid.Column="0" Grid.Row="2"
                    Margin="2,2,2,0"
                    Content="{DynamicResource rekeyKeynoteIcon}"
                    ToolTip="Change key of selected keynote"
                  />

            <Button Grid.Column="1" Grid.Row="2"
                    Margin="2,2,0,0"
                    Content="{DynamicResource reCatKeynoteIcon}"
                    ToolTip="Change category of selected keynote"
                  />
          </Grid>
        </Grid>
      </StackPanel>
    </GroupBox>
  </ControlTemplate>

</ResourceDictionary>
