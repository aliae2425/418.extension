<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ControlTemplate x:Key="UpdateSectionTemplate" TargetType="ContentControl">
    <GroupBox Header="Update Model" Margin="0,0,0,10" Padding="6">
      <Button Content="Update Model"
              Padding="8,4,8,4"
              Style="{DynamicResource PrimaryButtonStyle}"
              ToolTip="Reloads keynote file and updates keynotes per changes"
              />
    </GroupBox>
  </ControlTemplate>

</ResourceDictionary>
