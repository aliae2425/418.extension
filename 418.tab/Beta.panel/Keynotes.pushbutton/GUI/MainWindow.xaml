<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="418 : Keynotes Editor"
        MinHeight="600" MinWidth="800"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="1">

  <Window.Resources>
    <ResourceDictionary>
      <!-- Convertisseur pour la visibilité -->
      <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </ResourceDictionary>
  </Window.Resources>

  <Border CornerRadius="8" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Custom Title Bar -->
    <Grid Grid.Row="0" Name="TitleBar" Background="Transparent" Margin="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Bouton burger (déplacé dans la barre de titre) -->
      <Button Name="BurgerButton" 
              Grid.Column="0"
              Width="40" Height="40"
              Margin="4,4,0,0"
              Background="Transparent"
              BorderThickness="0"
              Cursor="Hand"
              ToolTip="Options">
        <TextBlock Text="☰" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
      </Button>

      <TextBlock Text="418 : Keynotes Editor"
                 Grid.Column="1"
                 Style="{DynamicResource HeaderTextBlockStyle}"
                 Margin="12,0,0,0"
                 VerticalAlignment="Center"/>

      <Button Name="CloseWindowButton" 
              Grid.Column="2" 
              Content="✕" 
              Width="40" Height="40" 
              Margin="0,4,4,0"
              VerticalAlignment="Top"
              Background="Transparent" 
              BorderThickness="0" 
              Foreground="{DynamicResource TextPrimaryBrush}"
              FontSize="16" 
              Cursor="Hand">
         <Button.Template>
             <ControlTemplate TargetType="Button">
                 <Border x:Name="border" Background="{TemplateBinding Background}">
                     <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                 </Border>
                 <ControlTemplate.Triggers>
                     <Trigger Property="IsMouseOver" Value="True">
                         <Setter TargetName="border" Property="Background" Value="#FFE81123"/>
                         <Setter Property="Foreground" Value="White"/>
                     </Trigger>
                 </ControlTemplate.Triggers>
             </ControlTemplate>
         </Button.Template>
      </Button>
    </Grid>

    <!-- Main Content -->
    <Grid Grid.Row="1" Margin="12">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="4*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>

      <!-- Col 1: TreeView -->
      <ContentControl Name="KeynoteTreeHost" Grid.Column="0" Template="{DynamicResource KeynoteTreeTemplate}"/>

      <!-- Col 2: ListView -->
      <ContentControl Name="KeynoteDetailsHost" Grid.Column="1" Template="{DynamicResource KeynoteDetailsTemplate}"/>
    </Grid>

    <!-- Footer -->
    <Grid Grid.Row="2" Margin="12,0,12,12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Status Text or similar -->
        <TextBlock Text="Ready" VerticalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>

        <!-- Buttons -->
        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Button Name="CancelButton" Content="Annuler" Margin="0,0,8,0" Width="100"/>
            <Button Name="SaveButton" Content="Enregistrer" Style="{DynamicResource PrimaryButtonStyle}" Width="100"/>
        </StackPanel>
    </Grid>

      <!-- Overlay for Burger Menu -->
      <Border Name="BurgerMenuOverlay"
              Grid.Row="0" Grid.RowSpan="3"
              Background="#80000000"
              Panel.ZIndex="999"
              Visibility="Collapsed"/>

      <!-- Menu burger (panneau coulissant) -->
      <Border Name="BurgerMenu"
              Grid.Row="0" Grid.RowSpan="3"
              Width="320"
              HorizontalAlignment="Left"
              Background="{DynamicResource CardBackgroundBrush}"
              BorderThickness="0,0,1,0"
              BorderBrush="{DynamicResource ControlBorderBrush}"
              Panel.ZIndex="1000"
              Visibility="Collapsed">
        <Border.Effect>
          <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.2"/>
        </Border.Effect>
        
        <ContentControl Name="BurgerMenuHost" Template="{DynamicResource BurgerMenuTemplate}"/>
      </Border>

    </Grid>
  </Border>
</Window>
