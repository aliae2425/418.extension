<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        ShowInTaskbar="False"
        Width="950" Height="760"
        MinWidth="750" MinHeight="520"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{DynamicResource TransparentBrush}"
        WindowStartupLocation="CenterScreen"
        Title="Manage Keynotes"
        Closing="window_closing">

    <!-- Resources are merged by Python (UIResourceLoader) -->
    <Window.Resources>
        <ResourceDictionary />
    </Window.Resources>

    <Border CornerRadius="8"
            Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1">

        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- TitleBar (BatchExport-like) -->
            <Grid Grid.Row="0" Name="TitleBar" Background="{DynamicResource TransparentBrush}" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Burger button (BatchExport-like) -->
                <Button Name="BurgerButton"
                        Grid.Column="0"
                        Width="40" Height="40"
                        Margin="4,0,6,0"
                        Background="{DynamicResource TransparentBrush}"
                        BorderThickness="0"
                        Cursor="Hand">
                    <TextBlock Text="â˜°"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="{DynamicResource Title}"
                           Style="{DynamicResource HeaderTextBlockStyle}"
                           VerticalAlignment="Center"/>

                <Button Name="CloseWindowButton"
                        Grid.Column="2"
                        Content="&#x2715;"
                        Width="40" Height="40"
                        Background="{DynamicResource TransparentBrush}"
                        BorderThickness="0"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        FontSize="16"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource CloseButtonHoverBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextOnDangerBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Work area (search + tree) -->
                <ContentControl x:Name="WorkAreaHost"
                                Grid.Column="0"
                                Panel.ZIndex="0"
                                Template="{DynamicResource WorkAreaTemplate}"/>

                <!-- Burger menu (overlay + drawer) -->
                <ContentControl x:Name="BurgerMenuHost"
                                Grid.Column="0"
                                Panel.ZIndex="1000"
                                Template="{DynamicResource BurgerMenuTemplate}"/>
        </Grid>
        </Grid>
    </Border>
</Window>
