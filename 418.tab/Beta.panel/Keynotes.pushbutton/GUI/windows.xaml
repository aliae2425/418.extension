<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeur de Keynotes" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <HierarchicalDataTemplate x:Key="KeynoteTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Key}" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Description}" FontStyle="Italic"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="LoadButton" Content="Charger" Width="100" Height="30" Margin="0,0,10,0"/>
            <TextBlock Name="FilePathText" VerticalAlignment="Center" Text="Aucun fichier chargé" Foreground="Gray"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- TreeView -->
            <TreeView Name="KeynoteTree" Grid.Column="0" ItemTemplate="{StaticResource KeynoteTemplate}" BorderBrush="LightGray" BorderThickness="1"/>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Detail View -->
            <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="1" Padding="10" Background="#FAFAFA">
                <StackPanel Name="DetailPanel" IsEnabled="False">
                    <TextBlock Text="Détails" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Clé (Key):"/>
                    <TextBox Name="KeyBox" Margin="0,0,0,10"/>

                    <TextBlock Text="Description:"/>
                    <TextBox Name="DescBox" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <TextBlock Text="Clé Parent:"/>
                    <TextBox Name="ParentBox" Margin="0,0,0,20"/>

                    <Button Name="ApplyButton" Content="Appliquer les modifications" Height="30" Margin="0,0,0,20"/>

                    <Separator Margin="0,0,0,20"/>

                    <TextBlock Text="Actions" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Button Name="AddChildButton" Content="Ajouter un enfant" Height="30" Margin="0,0,0,5"/>
                    <Button Name="AddSiblingButton" Content="Ajouter un frère" Height="30" Margin="0,0,0,5"/>
                    <Button Name="DeleteButton" Content="Supprimer" Height="30" Background="#FFEEEE" Foreground="Red"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="SaveButton" Content="Enregistrer le fichier" Width="150" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
