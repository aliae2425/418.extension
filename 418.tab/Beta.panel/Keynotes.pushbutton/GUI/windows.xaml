<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeur de Keynotes" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <HierarchicalDataTemplate x:Key="KeynoteTemplate" ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Key}" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Description}" FontStyle="Italic"/>
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="LoadButton" Content="Charger" Width="100" Height="30" Margin="0,0,10,0"/>
            <TextBlock Name="FilePathText" VerticalAlignment="Center" Text="Aucun fichier chargÃ©" Foreground="Gray"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <TreeView Name="KeynoteTree" ItemTemplate="{StaticResource KeynoteTemplate}" BorderBrush="LightGray" BorderThickness="1"/>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="SaveButton" Content="Enregistrer le fichier" Width="150" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
