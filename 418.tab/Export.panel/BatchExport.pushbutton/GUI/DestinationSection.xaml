<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>
        <TextBlock Text="Destination" FontWeight="Bold" Margin="0,0,0,6"/>
        <DockPanel LastChildFill="True" Margin="0,4,0,0">
            <Button Name="BrowseButton" Content="..." Margin="6,0,0,0" MinWidth="90"/>
            <TextBox Name="PathTextBox" MinWidth="220" Height="24" VerticalAlignment="Center"/>
        </DockPanel>

        <Separator Margin="0,8,0,8"/>
        <TextBlock Text="Organisation" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <StackPanel Orientation="horizontal">
            <CheckBox Name="CreateSubfoldersCheck" Content="Créer des sous-dossiers par jeux" Margin="0,2,0,0"/>
            <CheckBox Name="SeparateByFormatCheck" Content="Séparer par format (PDF/DWG)" Margin="0,2,0,0"/>
        </StackPanel>
    </StackPanel>
  
</Grid>
