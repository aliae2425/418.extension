<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="418 : Exportation des jeux"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

        <Window.Resources>
            <SolidColorBrush x:Key="LightGrayBrush" Color="#FFF8F8F8"/>
            <SolidColorBrush x:Key="MediumGrayBrush" Color="#da2626cc"/>

            <Style x:Key="StyledBorder" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="8"/>
            </Style>

            <!-- Style FlatComboBox retiré (non utilisé) -->
        </Window.Resources>

  <Grid>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>

    
    <TextBlock Text="418 : Exportation des jeux" 
                Grid.Row="0" 
                Grid.ColumnSpan="2" 
                FontSize="23" 
                Margin="20,8,0,8"/>

    <!-- Zone choix des paramètres: chargée dynamiquement -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0" 
            MaxHeight="180">
        <ContentControl Name="ParametersHost" />
    </Border>

    <!-- Zone de destination: chargée dynamiquement -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="1"
            Grid.Column="1">
        <ContentControl Name="DestinationHost" />
    </Border>

    <!-- Zone de nommage -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="2"
            Grid.Column="1">
        <ContentControl Name="NamingHost" />
    </Border>

    <!-- Zone recapitulatif + progression -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Grid.Column="0">
        <ContentControl Name="PreviewHost" />
    </Border>




  </Grid>
</Window>
