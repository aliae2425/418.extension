<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ordre d'impression" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ListBox Name="ItemsList" Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding [SheetNumber]}" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding [SheetName]}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
            <Button Name="UpButton" Content="▲" Width="30" Height="30" Margin="0,0,0,5" Click="OnUpClick"/>
            <Button Name="DownButton" Content="▼" Width="30" Height="30" Click="OnDownClick"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="80" Height="25" Margin="0,0,10,0" Click="OnOkClick"/>
            <Button Name="CancelButton" Content="Annuler" Width="80" Height="25" Click="OnCancelClick"/>
        </StackPanel>
    </Grid>
</Window>