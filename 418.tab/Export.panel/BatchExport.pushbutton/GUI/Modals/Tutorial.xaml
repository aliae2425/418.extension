<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration Requise - Batch Export"  Height="600" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="Run" x:Key="BoldRun">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Configuration Manquante" FontSize="24" FontWeight="Light" Foreground="#007ACC" Margin="0,0,0,20"/>
            <TextBlock>
                <Run Text="Aucun paramètre de configuration n'a été détecté sur les jeux de feuilles."/>
            </TextBlock>
            <TextBlock Text="Pour utiliser cet outil, vous devez créer des paramètres spécifiques dans votre projet Revit."/>
            <TextBlock FontWeight="Bold" Text="Paramètres requis :" Margin="0,10,0,5"/>
            <StackPanel Margin="20,0,0,0">
                <TextBlock>
                    <Run Text="• "/>
                    <Run Text="Un paramètre pour gérer l'export"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="• "/>
                    <Run Text="Un paramètre pour compiler le PDF"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="• "/>
                    <Run Text="Un paramètre pour l'export DWG"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Background="#F5F5F5" CornerRadius="4" Padding="15" Margin="0,10">
            <StackPanel>
                <TextBlock FontWeight="Bold" Text="Comment créer les paramètres :" Margin="0,0,0,15"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border Background="#007ACC" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                        <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,0"/>
                    </Border>
                    <TextBlock Text="Allez dans l'onglet Gérer > Paramètres du projet." VerticalAlignment="Center" Margin="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border Background="#007ACC" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                        <TextBlock Text="2" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,0"/>
                    </Border>
                    <TextBlock Text="Cliquez sur Ajouter." VerticalAlignment="Center" Margin="0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border Background="#007ACC" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                        <TextBlock Text="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,0"/>
                    </Border>
                    <TextBlock VerticalAlignment="Center" Margin="0">
                        <Run Text="Type de paramètre : " FontWeight="Bold"/>
                        <Run Text="Oui/Non"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border Background="#007ACC" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                        <TextBlock Text="4" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,0,0"/>
                    </Border>
                    <TextBlock VerticalAlignment="Center" Margin="0">
                        <Run Text="Catégorie : " FontWeight="Bold"/>
                        <Run Text="Collections de feuilles"/>
                    </TextBlock>
                </StackPanel>
                
                <TextBlock Text="Répétez l'opération pour créer au moins 3 paramètres (ex: 'A Exporter', 'Est un Carnet', 'Export DWG')." FontStyle="Italic" Margin="34,10,0,0"/>
            </StackPanel>
        </Border>

        <Button Grid.Row="2" Name="CloseButton" Content="J'ai compris" Height="30" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</Window>
