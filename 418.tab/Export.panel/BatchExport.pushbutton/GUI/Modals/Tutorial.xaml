<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration Requise - Batch Export"  Height="650" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{DynamicResource TransparentBrush}">

    <Border CornerRadius="8"
            Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="Configuration Manquante"
                           Style="{DynamicResource HeaderTextBlockStyle}"
                           VerticalAlignment="Center"/>
                <Button Name="CloseButton"
                        Content="✕"
                        Width="32" Height="32"
                        HorizontalAlignment="Right"
                        Background="{DynamicResource TransparentBrush}"
                        BorderThickness="0"
                        Cursor="Hand"
                        Foreground="{DynamicResource TextPrimaryBrush}"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <TextBlock Style="{DynamicResource BodyTextBlockStyle}" Text="Pour utiliser Batch Export, vous devez créer des paramètres de projet (type Oui/Non) appliqués aux jeux de feuilles (Collections de feuilles)." TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock Style="{DynamicResource BodyTextBlockStyle}" Text="Ces paramètres servent de drapeaux pour piloter l'export." TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock Style="{DynamicResource SubHeaderTextBlockStyle}" Text="3 paramètres requis (Oui/Non sur les jeux de feuilles) :" Margin="0,10,0,5"/>
                    <StackPanel Margin="20,0,0,0">
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            <Run Text="• "/>
                            <Run Text="Un paramètre pour autoriser l'export du jeu de feuilles (export du jeu)"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            <Run Text="• "/>
                            <Run Text="Un paramètre pour exporter en PDF compilé (un seul PDF)"/>
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            <Run Text="• "/>
                            <Run Text="Un paramètre pour exporter en DWG"/>
                        </TextBlock>
                    </StackPanel>

                    <Border Style="{DynamicResource CardStyle}" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Style="{DynamicResource SubHeaderTextBlockStyle}" Text="Comment créer un paramètre de projet :" Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Background="{DynamicResource AccentBrush}" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                                    <TextBlock Text="1" Foreground="{DynamicResource TextOnAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0"/>
                                </Border>
                                <TextBlock Style="{DynamicResource BodyTextBlockStyle}" Text="Allez dans l'onglet Gérer > Paramètres du projet." TextWrapping="Wrap" VerticalAlignment="Center" Margin="0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Background="{DynamicResource AccentBrush}" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                                    <TextBlock Text="2" Foreground="{DynamicResource TextOnAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0"/>
                                </Border>
                                <TextBlock Style="{DynamicResource BodyTextBlockStyle}" Text="Cliquez sur Ajouter." TextWrapping="Wrap" VerticalAlignment="Center" Margin="0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Background="{DynamicResource AccentBrush}" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                                    <TextBlock Text="3" Foreground="{DynamicResource TextOnAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0"/>
                                </Border>
                                <TextBlock Style="{DynamicResource BodyTextBlockStyle}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0">
                                    <Run Text="Type de paramètre : " FontWeight="Bold"/>
                                    <Run Text="Oui/Non"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Background="{DynamicResource AccentBrush}" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                                    <TextBlock Text="4" Foreground="{DynamicResource TextOnAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0"/>
                                </Border>
                                <TextBlock Style="{DynamicResource BodyTextBlockStyle}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0">
                                    <Run Text="Catégorie : " FontWeight="Bold"/>
                                    <Run Text="Collections de feuilles"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Background="{DynamicResource AccentBrush}" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                                    <TextBlock Text="5" Foreground="{DynamicResource TextOnAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0"/>
                                </Border>
                                <TextBlock Style="{DynamicResource BodyTextBlockStyle}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0">
                                    <Run Text="Nom : " FontWeight="Bold"/>
                                    <Run Text="créez un nom explicite (ex: Export jeu, PDF compilé, Export DWG)."/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Background="{DynamicResource AccentBrush}" Width="24" Height="24" CornerRadius="12" Margin="0,0,10,0">
                                    <TextBlock Text="6" Foreground="{DynamicResource TextOnAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="0"/>
                                </Border>
                                <TextBlock Style="{DynamicResource BodyTextBlockStyle}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0">
                                    <Run Text="Répéter : " FontWeight="Bold"/>
                                    <Run Text="refaites l'opération jusqu'à obtenir les 3 paramètres nécessaires."/>
                                </TextBlock>
                            </StackPanel>

                            <TextBlock Style="{DynamicResource BodyTextBlockStyle}" Text="Une fois créés, ajoutez ces paramètres aux jeux de feuilles concernés et cochez/décochez selon ce que vous voulez exporter." TextWrapping="Wrap" FontStyle="Italic" Margin="34,10,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Button Grid.Row="2" Name="OkButton" Content="J'ai compris" Height="32" Width="140"
                HorizontalAlignment="Right" Margin="0,12,0,0" Style="{DynamicResource PrimaryButtonStyle}"/>
        </Grid>
    </Border>
</Window>
