<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Conteneur principal de la section Nommage -->
  <StackPanel>
    <!-- Titre de la section -->
    <TextBlock Text="Nommage" FontWeight="Bold" Margin="0,0,0,6"/>

    <!-- Règles de nommage pour les feuilles -->
    <DockPanel LastChildFill="True" Margin="0,4,0,0">
      <TextBlock Text="Feuilles : " MinWidth="100" VerticalAlignment="Center"/>
      <Button Name="SheetNamingButton" Content="..." HorizontalAlignment="Stretch"/>
    </DockPanel>

    <!-- Règles de nommage pour les carnets -->
    <DockPanel LastChildFill="True" Margin="0,4,0,0">
      <TextBlock Text="Carnets : " MinWidth="100" VerticalAlignment="Center"/>
      <Button Name="SetNamingButton" Content="..." HorizontalAlignment="Stretch"/>
    </DockPanel>
  </StackPanel>
</Grid>
