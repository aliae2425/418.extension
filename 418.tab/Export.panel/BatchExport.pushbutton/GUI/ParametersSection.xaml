<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Conteneur principal de la section Paramètres -->
  <StackPanel>
    <!-- Titre de la section -->
    <TextBlock Text="Paramètres" FontWeight="Bold" Margin="0,0,0,6"/>

    <!-- Messages d'avertissement / d'erreur sur le choix des paramètres -->
    <TextBlock Name="ParamWarningText"
               Foreground="OrangeRed"
               Visibility="Collapsed"
               TextWrapping="Wrap"
               Margin="0,0,0,6"
               Text="Paramètres insuffisants."/>
    <TextBlock Name="UniqueErrorText"
               Foreground="Red"
               Visibility="Collapsed"
               TextWrapping="Wrap"
               Margin="0,0,0,6"
               Text="Choisissez trois paramètres différents."/>

    <!-- Choix des paramètres de regroupement (export, carnet, DWG) -->
    <Expander Name="CollectionExpander" Header="Sélection des paramètres" IsExpanded="True">
      <StackPanel Margin="0,6,0,0">
        <DockPanel LastChildFill="True" Margin="0,4,0,0">
          <TextBlock Text="Exportation : " MinWidth="120" VerticalAlignment="Center"/>
          <ComboBox Name="ExportationCombo" Width="Auto"/>
        </DockPanel>
        <DockPanel LastChildFill="True" Margin="0,4,0,0">
          <TextBlock Text="Carnet (par feuille) : " MinWidth="120" VerticalAlignment="Center"/>
          <ComboBox Name="CarnetCombo" Width="Auto"/>
        </DockPanel>
        <DockPanel LastChildFill="True" Margin="0,4,0,0">
          <TextBlock Text="DWG : " MinWidth="120" VerticalAlignment="Center"/>
          <ComboBox Name="DWGCombo" Width="Auto"/>
        </DockPanel>
      </StackPanel>
    </Expander>

    <Separator Margin="0,10,0,6"/>

    <!-- Réglages liés au format PDF -->
    <Expander Header="Réglages PDF" IsExpanded="False" Margin="0,0,0,4">
      <StackPanel Margin="0,6,0,4">
        <DockPanel LastChildFill="True" Margin="0,2,0,0">
          <ComboBox Name="PDFSetupCombo" MinWidth="160"/>
          <Button Name="PDFCreateButton" Content="+" Width="28" Margin="6,0,0,0" ToolTip="Créer un réglage PDF"/>
        </DockPanel>
      </StackPanel>
    </Expander>

    <!-- Réglages liés au format DWG -->
    <Expander Header="Réglages DWG" IsExpanded="False" Margin="0,0,0,4">
      <StackPanel Margin="0,6,0,4">
        <DockPanel LastChildFill="True" Margin="0,2,0,0">
          <ComboBox Name="DWGSetupCombo" MinWidth="160"/>
          <Button Name="DWGCreateButton" Content="+" Width="28" Margin="6,0,0,0" ToolTip="Créer un réglage DWG"/>
        </DockPanel>
        <CheckBox Name="DWGSeparateCheck" Content="Exporter les vues séparements." Margin="0,6,0,0"/>
      </StackPanel>
    </Expander>
  </StackPanel>
</Grid>
