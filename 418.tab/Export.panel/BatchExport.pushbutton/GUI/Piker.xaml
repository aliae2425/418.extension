<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Piker"
        Height="320" Width="520"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Configuration du nommage" FontSize="16" FontWeight="Bold"/>

    <Border Grid.Row="1" Margin="0,8,0,8" Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
      <StackPanel>
        <TextBlock Text="(Base Piker.xaml)" Margin="0,0,0,8"/>
        <StackPanel>
          <TextBlock Text="ModÃ¨le de nommage (ex: {Numero} - {Nom})" Foreground="#555" FontStyle="Italic" Margin="0,0,0,2"/>
          <TextBox Name="PatternTextBox" MinHeight="28" Text=""/>
        </StackPanel>
      </StackPanel>
    </Border>

    <DockPanel Grid.Row="2" LastChildFill="False">
      <Button Name="CancelButton" Content="Annuler" Width="100" Height="28" Margin="0,0,8,0"/>
      <Button Name="OkButton" Content="OK" Width="100" Height="28"/>
    </DockPanel>
  </Grid>
</Window>
