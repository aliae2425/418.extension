<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Piker"
        Height="440" Width="760"
        WindowStartupLocation="CenterOwner">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Text="Configuration du nommage" FontSize="16" FontWeight="Bold"/>

    <!-- Zone centrale: prefix / listes / suffix -->
    <Grid Grid.Row="1" Margin="0,8,0,8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="180"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="180"/>
      </Grid.ColumnDefinitions>

      <!-- Prefix -->
      <StackPanel Grid.Column="0" Margin="0,0,8,0">
        <TextBlock Text="Préfix" FontWeight="Bold"/>
        <TextBox Name="PrefixTextBox" MinHeight="26" />
        <TextBlock Text="Préfix appliqué avant la concaténation." FontSize="11" Foreground="#666" Margin="0,4,0,0"/>
      </StackPanel>

      <!-- Liste paramètres disponibles -->
      <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,8,0">
        <StackPanel>
          <TextBlock Text="Paramètres disponibles" FontWeight="Bold" Margin="0,0,0,4"/>
          <ListBox Name="AvailableParamsList" Height="220" />
          <Button Name="AddParamButton" Content="Ajouter →" Height="26" Margin="0,6,0,0" />
        </StackPanel>
      </Border>

      <!-- Liste paramètres choisis -->
      <Border Grid.Column="2" BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,0,8,0">
        <StackPanel>
          <TextBlock Text="Paramètres choisis (ordre)" FontWeight="Bold" Margin="0,0,0,4"/>
          <ListBox Name="SelectedParamsList" Height="180" />
          <DockPanel Margin="0,6,0,0" LastChildFill="False">
            <Button Name="MoveUpButton" Content="↑" Width="40" Height="26" Margin="0,0,4,0" />
            <Button Name="MoveDownButton" Content="↓" Width="40" Height="26" Margin="0,0,4,0" />
            <Button Name="RemoveParamButton" Content="Retirer" Width="80" Height="26" />
          </DockPanel>
        </StackPanel>
      </Border>

      <!-- Suffix -->
      <StackPanel Grid.Column="3" Margin="0,0,0,0">
        <TextBlock Text="Suffix" FontWeight="Bold"/>
        <TextBox Name="SuffixTextBox" MinHeight="26" />
        <TextBlock Text="Suffix appliqué après la concaténation." FontSize="11" Foreground="#666" Margin="0,4,0,0"/>
      </StackPanel>
    </Grid>

    <!-- Aperçu du pattern résultant -->
    <Border Grid.Row="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,0,8">
      <StackPanel Orientation="Vertical">
        <TextBlock Text="Aperçu" FontWeight="Bold"/>
        <TextBlock Name="PatternPreviewText" Text="" Margin="0,4,0,0" Foreground="#333" FontFamily="Consolas"/>
        <DockPanel Margin="0,8,0,0" LastChildFill="False">
          <Button Name="CancelButton" Content="Annuler" Width="110" Height="30" Margin="0,0,8,0" />
          <Button Name="OkButton" Content="OK" Width="110" Height="30" />
        </DockPanel>
      </StackPanel>
    </Border>
  </Grid>
</Window>
