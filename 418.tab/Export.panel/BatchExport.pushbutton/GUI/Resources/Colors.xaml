<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Palette de couleurs de l'application 418 Export -->
    
    <!-- Couleurs de fond -->
    <SolidColorBrush x:Key="LightGrayBrush" Color="#FFF8F8F8"/>
    <SolidColorBrush x:Key="MediumGrayBrush" Color="#da2626cc"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="#FFFFFFFF"/>
    
    <!-- Couleurs de texte -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF666666"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#FFCCCCCC"/>
    
