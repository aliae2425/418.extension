<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Fusion des ressources de couleurs -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- ================================ -->
    <!-- Styles globaux pour l'application -->
    <!-- ================================ -->
    
    <!-- Style pour les bordures de sections -->
    <Style x:Key="StyledBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="8"/>
    </Style>
    
    <!-- Style pour les titres de section -->
    <Style x:Key="SectionTitle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!-- Style pour les labels de champs -->
    <Style x:Key="FieldLabel" TargetType="TextBlock">
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Style pour les boutons standards -->
    <Style x:Key="StandardButton" TargetType="Button">
        <Setter Property="Padding" Value="12,4"/>
        <Setter Property="MinHeight" Value="28"/>
        <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
    </Style>
    
    <!-- Style pour les messages d'erreur -->
    <Style x:Key="ErrorText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ErrorRedBrush}"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
    </Style>
    
    <!-- Style pour les messages d'avertissement -->
    <Style x:Key="WarningText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource WarningOrangeBrush}"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
    </Style>
    
    <!-- Style pour les messages de succÃ¨s -->
    <Style x:Key="SuccessText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SuccessGreenBrush}"/>
        <Setter Property="Margin" Value="0,6,0,0"/>
    </Style>
    
</ResourceDictionary>
