<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="418 : Exportation des jeux"
        MinHeight="710" MinWidth="950"
        Height="710" Width="950"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="{DynamicResource TransparentBrush}"
        BorderThickness="1">

  <!--
    Fenêtre principale BatchExport

    Objectif
    - Fournir une UI unique (TitleBar custom + contenu principal).
    - Centraliser l'accès aux paramètres via un burger menu (panneau latéral).

    Ressources / styles
    - Les styles/couleurs (light/dark) ne sont pas définis ici.
    - Elles sont mergées au runtime (windows.xaml + éventuellement ColorsDark/StylesDark)
      par le code Python (UIResourceLoader / fenêtres).

    Templates
    - Les ContentControl ci-dessous consomment des ControlTemplate (…Template)
      définis dans GUI/Controls/*.xaml et injectés dans Resources par UIResourceLoader.
  -->

  <Window.Resources>
    <!--
      Dictionnaire volontairement vide côté XAML.
      Les dictionnaires de ressources sont ajoutés par Python.
    -->
    <ResourceDictionary>
    </ResourceDictionary>
  </Window.Resources>

  <Border CornerRadius="8" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!--
      TitleBar custom
      - BurgerButton : ouvre/ferme le panneau latéral.
      - CloseWindowButton : ferme la fenêtre.
      - TitleBar est utilisé côté Python pour permettre DragMove().
    -->
    <Grid Grid.Row="0" Name="TitleBar" Background="{DynamicResource TransparentBrush}" Margin="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Bouton burger (déplacé dans la barre de titre) -->
      <Button Name="BurgerButton" 
              Grid.Column="0"
              Width="40" Height="40"
              Margin="4,4,0,0"
              Background="{DynamicResource TransparentBrush}"
              BorderThickness="0"
              Cursor="Hand"
              ToolTip="Paramètres et options d'export">
        <TextBlock Text="☰" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
      </Button>

      <TextBlock Text="418 : Exportation des jeux"
                 Grid.Column="1"
                 Style="{DynamicResource HeaderTextBlockStyle}"
                 Margin="12,0,0,0"
                 VerticalAlignment="Center"/>

      <Button Name="CloseWindowButton" 
              Grid.Column="2" 
              Content="✕" 
              Width="40" Height="40" 
              Margin="0,4,4,0"
              VerticalAlignment="Top"
              Background="{DynamicResource TransparentBrush}" 
              BorderThickness="0" 
              Foreground="{DynamicResource TextPrimaryBrush}"
              FontSize="16" 
              Cursor="Hand">
         <Button.Template>
             <ControlTemplate TargetType="Button">
                 <Border x:Name="border" Background="{TemplateBinding Background}">
                     <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                 </Border>
                 <ControlTemplate.Triggers>
                     <Trigger Property="IsMouseOver" Value="True">
                     <Setter TargetName="border" Property="Background" Value="{DynamicResource CloseButtonHoverBrush}"/>
                     <Setter Property="Foreground" Value="{DynamicResource TextOnDangerBrush}"/>
                     </Trigger>
                 </ControlTemplate.Triggers>
             </ControlTemplate>
         </Button.Template>
      </Button>
    </Grid>

    <!-- Main Content -->
    <Grid Grid.Row="1" Margin="12">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!--
        Overlay plein écran derrière le burger menu
        - Sert à "modaliser" le panneau (click-outside, focus) côté code.
      -->
      <Border Name="BurgerMenuOverlay"
              Grid.Row="0" Grid.RowSpan="4"
              Background="{DynamicResource ModalOverlayBrush}"
              Panel.ZIndex="999"
              Visibility="Collapsed"
              Margin="-12"/>

      <!--
        Hover Layer (au-dessus de l'overlay sombre)
        - Zone dédiée "devant" l'overlay, pour afficher des infos contextuelles.
        - Marge 36px et bordure transparente (container réutilisable).
        - IsHitTestVisible="False" pour ne pas casser le click-outside-to-close.
      -->
      <Border Name="BurgerMenuHoverLayer"
              Grid.Row="0" Grid.RowSpan="4"
              Panel.ZIndex="1000"
              Background="{DynamicResource TransparentBrush}"
              IsHitTestVisible="False"
              Margin="-12">
        <Border BorderBrush="{DynamicResource TransparentBrush}"
                BorderThickness="1"
                Background="{DynamicResource TransparentBrush}"
                Margin="356,36,36,36"
                Padding="0">
          <TextBlock Name="BurgerMenuHoverText"
                     Visibility="Collapsed"
                     Text=""
                     Foreground="{DynamicResource TextOnAccentBrush}"
                     FontSize="13"
                     TextWrapping="Wrap"
                     MaxWidth="520"/>
        </Border>
      </Border>

      <!--
        BurgerMenu (panneau latéral)
        Contient :
        - ParameterSelectorHost : choix des paramètres et règles d'export.
        - ExportOptionsHost : réglages PDF/DWG.
        - NamingConfigHost : configuration du nommage (déplacé ici).
        - Section profil : accès aux profils (gestion pilotée par code Python).
      -->
      <Border Name="BurgerMenu"
              Grid.Row="0" Grid.RowSpan="4"
              Width="320"
              HorizontalAlignment="Left"
              Background="{DynamicResource CardBackgroundBrush}"
              BorderThickness="0,0,1,0"
              BorderBrush="{DynamicResource ControlBorderBrush}"
              Panel.ZIndex="1000"
              Visibility="Collapsed"
              Margin="-12,-12,0,-12">
        <Border.Effect>
          <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          
          <!-- En-tête du menu -->
          <Border Grid.Row="0" Background="{DynamicResource MicaBackgroundBrush}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource ControlBorderBrush}" Padding="16">
            <Grid>
              <TextBlock Text="Paramètres" Style="{DynamicResource SubHeaderTextBlockStyle}" VerticalAlignment="Center"/>
              <Button Name="CloseBurgerButton" 
                      Content="×" 
                      FontSize="24"
                      Width="32" Height="32"
                      HorizontalAlignment="Right"
                      Background="{DynamicResource TransparentBrush}"
                      BorderThickness="0"
                      Cursor="Hand"
                      Foreground="{DynamicResource TextPrimaryBrush}"/>
            </Grid>
          </Border>
          
            <!-- Contenu du menu (scrollable) -->
          <Grid Grid.Row="1">
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
              <StackPanel Margin="16">
                <ContentControl x:Name="ParameterSelectorHost"
                                Template="{DynamicResource ParameterSelectorTemplate}"/>
                <ContentControl x:Name="NamingConfigHost"
                                  Template="{DynamicResource NamingConfigTemplate}"/>
                <ContentControl x:Name="ExportOptionsHost"
                                Margin="0,16,0,0"
                                Template="{DynamicResource ExportOptionsTemplate}"/>
              </StackPanel>
            </ScrollViewer>

            <!-- Section Profil -->
            <Border Grid.Row="1" 
                    Background="{DynamicResource MicaBackgroundBrush}" 
                    BorderThickness="0,1,0,0" 
                    BorderBrush="{DynamicResource ControlBorderBrush}" 
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Avatar / Icon -->
                    <Border Grid.Column="0" 
                            Width="32" Height="32" 
                            CornerRadius="16" 
                            Background="{DynamicResource AccentBrush}" 
                            Margin="0,0,12,0">
                        <TextBlock Text="P" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Foreground="{DynamicResource TextOnAccentBrush}" 
                                   FontWeight="Bold"/>
                    </Border>
                    
                    <!-- Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Name="ProfileNameText"
                                   Text="Profil" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="Configuration" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Settings / More button -->
                    <Button Name="ProfileSettingsButton"
                            Grid.Column="2"
                            Content="⚙"
                            Width="32" Height="32"
                          Background="{DynamicResource TransparentBrush}"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextSecondaryBrush}"
                            Cursor="Hand"/>
                </Grid>
            </Border>
          </Grid>
        </Grid>
      </Border>

      <!--
        Zone "Destination"
        - Visible en permanence dans le contenu principal.
        - Le code Python lit/écrit BrowseButton, PathTextBox, etc.
      -->
      <Border Style="{DynamicResource StyledBorder}"
              Grid.Row="1">
        <ContentControl x:Name="DestinationPickerHost"
                        Template="{DynamicResource DestinationPickerTemplate}"/>
      </Border>

      <!--
        Zone "Preview" (récapitulatif + progression)
        - Occupe les deux lignes du bas pour maximiser la place.
        - Contient la ListView groupée des collections + contrôles d'export.
      -->
      <Border Style="{DynamicResource StyledBorder}"
              Grid.Row="2"
              Grid.RowSpan="2"
              Margin="0,0,0,0">
        <ContentControl x:Name="CollectionPreviewHost"
                        Template="{DynamicResource CollectionPreviewTemplate}"/>
      </Border>

    </Grid>
    </Grid>
  </Border>
</Window>
