<Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--
    Hover UI: Help
    - Affiché dans BurgerMenuHoverLayer (zone à droite du burger menu)
    - Utilise uniquement des brushes du design system
  -->

  <StackPanel>
    <TextBlock Text="Aide"
               Foreground="{DynamicResource HoverTextBrush}"
               FontSize="16"
               FontWeight="SemiBold"
               Margin="0,0,0,8"/>

    <TextBlock TextWrapping="Wrap"
               Foreground="{DynamicResource HoverTextBrush}"
               FontSize="13"
               LineHeight="18">
      <Run Text="Cliquez sur le bouton d'aide pour ouvrir la fenêtre complète."/>
      <LineBreak/>
      <LineBreak/>
      <Run Text="Rappel :" FontWeight="SemiBold"/>
      <LineBreak/>
      <Run Text="• Exportation : paramètre Oui/Non"/>
      <LineBreak/>
      <Run Text="• Export PDF compilé : paramètre Oui/Non"/>
      <LineBreak/>
      <Run Text="• Export en DWG : paramètre Oui/Non"/>
    </TextBlock>
  </StackPanel>
</Grid>
