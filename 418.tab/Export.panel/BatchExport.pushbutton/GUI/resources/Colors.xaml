<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Fluent UI Palette -->
    
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MicaBackgroundBrush" Color="#F3F3F3"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5D5D5D"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#9D9D9D"/>
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="#FFFFFF"/>
    
    <!-- Accent -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#006CC1"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#005A9E"/>
    
    <!-- Controls -->
    <SolidColorBrush x:Key="ControlFillBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlFillHoverBrush" Color="#F9F9F9"/>
    <SolidColorBrush x:Key="ControlFillPressedBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ControlBorderHoverBrush" Color="#C0C0C0"/>

    <!-- Aliases / UI states -->
    <SolidColorBrush x:Key="ControlMouseOverBrush" Color="#F9F9F9"/>
    <SolidColorBrush x:Key="ModalOverlayBrush" Color="#80000000"/>
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#FFE81123"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="TextOnDangerBrush" Color="#FFFFFF"/>

    <!-- Non-brush color resources (for properties expecting Color) -->
    <Color x:Key="ShadowColor">#000000</Color>
    
    <!-- Legacy/Existing keys mapped to new ones -->
    <SolidColorBrush x:Key="LightGrayBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="MediumGrayBrush" Color="#E0E0E0"/>
</ResourceDictionary>
