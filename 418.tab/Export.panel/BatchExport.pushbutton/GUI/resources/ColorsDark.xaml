<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Fluent UI Palette - Dark Mode -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#23272F"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2C313A"/>
    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#23272F"/>
    <SolidColorBrush x:Key="MicaBackgroundBrush" Color="#23272F"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#5D5D5D"/>
    <SolidColorBrush x:Key="TextOnAccentBrush" Color="#23272F"/>
    <!-- Hover overlay text must be forced to white (light/dark) -->
    <SolidColorBrush x:Key="HoverTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#3399FF"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="ControlFillBrush" Color="#23272F"/>
    <SolidColorBrush x:Key="ControlFillHoverBrush" Color="#2C313A"/>
    <SolidColorBrush x:Key="ControlFillPressedBrush" Color="#1A1A1A"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#444A57"/>
    <SolidColorBrush x:Key="ControlBorderHoverBrush" Color="#0078D4"/>
    <!-- Aliases / UI states -->
    <SolidColorBrush x:Key="ControlMouseOverBrush" Color="#2C313A"/>
    <SolidColorBrush x:Key="ModalOverlayBrush" Color="#80000000"/>
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#FFE81123"/>
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="TextOnDangerBrush" Color="#FFFFFF"/>

    <!-- Non-brush color resources (for properties expecting Color) -->
    <Color x:Key="ShadowColor">#000000</Color>
    <SolidColorBrush x:Key="LightGrayBrush" Color="#23272F"/>
    <SolidColorBrush x:Key="MediumGrayBrush" Color="#444A57"/>
</ResourceDictionary>
