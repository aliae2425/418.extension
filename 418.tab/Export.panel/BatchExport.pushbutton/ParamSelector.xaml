<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sélection des paramètres d'export"
        Height="380" Width="520"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Section 1: Exportation -->
    <GroupBox Header="Exportation" Grid.Row="0" Margin="0,0,0,8">
      <StackPanel Orientation="Vertical" Margin="8">
        <TextBlock Text="Paramètre Exportation" Margin="0,0,0,4"/>
        <ComboBox Name="ExportationCombo" MinWidth="320"/>
      </StackPanel>
    </GroupBox>

    <!-- Section 2: Carnet -->
    <GroupBox Header="Carnet" Grid.Row="1" Margin="0,0,0,8">
      <StackPanel Orientation="Vertical" Margin="8">
        <TextBlock Text="Paramètre Carnet" Margin="0,0,0,4"/>
        <ComboBox Name="CarnetCombo" MinWidth="320"/>
      </StackPanel>
    </GroupBox>

    <!-- Section 3: DWG -->
    <GroupBox Header="DWG" Grid.Row="2" Margin="0,0,0,8">
      <StackPanel Orientation="Vertical" Margin="8">
        <TextBlock Text="Paramètre DWG" Margin="0,0,0,4"/>
        <ComboBox Name="DWGCombo" MinWidth="320"/>
      </StackPanel>
    </GroupBox>

    <!-- Buttons -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="OkButton" Content="OK" Width="100" Margin="0,8,8,0" IsDefault="True" Click="OkButton_Click"/>
      <Button Name="CancelButton" Content="Annuler" Width="100" Margin="0,8,0,0" IsCancel="True" Click="CancelButton_Click"/>
    </StackPanel>
  </Grid>
</Window>
