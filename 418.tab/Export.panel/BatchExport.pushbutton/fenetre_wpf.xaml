<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="418 : Exportation des jeux"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

        <Window.Resources>
            <SolidColorBrush x:Key="LightGrayBrush" Color="#FFF8F8F8"/>
            <SolidColorBrush x:Key="MediumGrayBrush" Color="#da2626cc"/>

            <Style x:Key="StyledBorder" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource MediumGrayBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="8"/>
            </Style>

            <Style x:Key="FlatComboBox" TargetType="ComboBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </Window.Resources>

  <Grid>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>

    
    <TextBlock Text="418 : Exportation des jeux" Grid.Row="0" Grid.ColumnSpan="3" FontSize="23" Margin="20,8,0,8"/>

    <!-- Zone choix des parametre. a recuperer depuis config -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0" 
            MaxHeight="180">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" Margin="0"> 
                    <TextBlock Text="Paramètres" FontWeight="Bold" Margin="0,0,0,6"/>   
                    <!-- Plugin -->
                    <Expander Header="Jeu de feuilles"
                        Name="CollectionExpander"
                        IsExpanded="False"
                        ExpandDirection="Down"
                        Margin="0,0,8,0">
                        <StackPanel Orientation="Vertical">
                            <!-- Section 1: Exportation -->
                            <TextBlock Text="Paramètre Exportation" Margin="0,0,0,4"/>
                            <ComboBox Name="ExportationCombo" MinWidth="50"/>
                            <!-- Section 2: Carnet -->
                            <TextBlock Text="Paramètre Carnet" Margin="0,0,0,4"/>
                            <ComboBox Name="CarnetCombo" MinWidth="50"/>
                            <!-- Section 3: DWG -->
                            <TextBlock Text="Paramètre DWG" Margin="0,0,0,4"/>
                            <ComboBox Name="DWGCombo" MinWidth="50"/>
                        </StackPanel>
                    </Expander>
                    <!-- PDF -->
                    <Expander Header="Export PDF"
                        Name="PDFExpander"
                        IsExpanded="False"
                        ExpandDirection="Down"
                        Margin="0,0,8,0">
                        <TextBlock Text="Paramètres spécifiques à l'export PDF."/>
                    </Expander>
                    <!-- DWG -->
                    <Expander Header="Export DWG"
                        Name="DWGExpander"
                        IsExpanded="False"
                        ExpandDirection="Down"
                        Margin="0,0,8,0">
                        <TextBlock Text="Paramètres spécifiques à l'export DWG."/> 
                    </Expander>
                </StackPanel>
            </ScrollViewer>
    </Border>

    <!-- Zone de destination -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="1"
            Grid.Column="1">
        <StackPanel>
            <TextBlock Text="Destination : " FontWeight="Bold" Margin="0,0,0,6"/>
            <DockPanel LastChildFill="True" Margin="0,4,0,0">
                <Button Content="..."
                        Name="BrowseButton"
                        DockPanel.Dock="Right"
                        Height="28"
                        Width="35"
                        Margin="8,0,0,0"
                        Padding="12,4"/>
                <TextBox Name="PathTextBox"
                        MinHeight="28"
                        Padding="6,4"
                        Text=""
                        HorizontalAlignment="Stretch" 
                        ToolTip="Sélectionne un dossier de sortie"/>
            </DockPanel>
        </StackPanel>
    </Border>

    <!-- Zone de nommage -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="2"
            Grid.Column="1">
        <StackPanel>
            <TextBlock Text="Nommage" FontWeight="Bold" Margin="0,0,0,6"/>
            <DockPanel LastChildFill="True" Margin="0,4,0,0">
                <TextBlock Text="Feuilles : " MinWidth="100" VerticalAlignment="Center"/>
                <Button Content="..." Background="{StaticResource LightGrayBrush}" HorizontalAlignment="Stretch" />
            </DockPanel>   
            <DockPanel LastChildFill="True" Margin="0,4,0,0">
                <TextBlock Text="Carnets : " MinWidth="100"  VerticalAlignment="Center"/>
                <Button Content="..." Background="{StaticResource LightGrayBrush}" HorizontalAlignment="Stretch"/>
            </DockPanel>
        </StackPanel>
    </Border>

    <!-- Zone recapitulatif + progression -->
    <Border Style="{StaticResource StyledBorder}"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Grid.Column="0">
        <StackPanel>
            <TextBlock Text="Recapitulatif : " FontWeight="Bold" Margin="0,0,0,6"/>
            <ProgressBar Name="ExportProgressBar" 
                Height="24" Minimum="0" 
                Maximum="100" Value="0" Margin="0,4,0,8"/>
        </StackPanel>
    </Border>




  </Grid>
</Window>
